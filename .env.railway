# Railway Production Environment Variables

# Required: Set these in Railway dashboard
# OPENAI_API_KEY=your_actual_openai_key_here

# OpenAI Configuration
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.2

# Token Management
DAILY_TOKEN_LIMIT=512000
MAX_HIGHLIGHTS_PER_1000_WORDS=12

# Security (Railway will provide PORT automatically)
NODE_ENV=production
SESSION_SECRET=production_secret_change_this

# Database (Railway ephemeral storage)
DB_PATH=./data/teampulse.db

# Server Configuration
HOST=0.0.0.0

# Rate Limiting
API_RATE_LIMIT=100
ANALYSIS_RATE_LIMIT=10

# File Upload Limits
MAX_FILE_SIZE=50mb
ALLOWED_FILE_TYPES=.txt,.docx,.doc,.pdf

# Logging
LOG_LEVEL=info

# Performance
CACHE_TTL=300
DB_POOL_SIZE=10

# Authentication
AUTH_TOKEN_EXPIRY=7d
PASSWORD_HASH_ROUNDS=12